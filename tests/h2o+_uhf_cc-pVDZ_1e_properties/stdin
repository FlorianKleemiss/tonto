{

   name=     h2o
   
   output_style_options= {
      real_precision= 4
   }
   
   basis_directory= ./basis_sets
   basis_name= cc-pVDZ
   
   charge=   1
   multiplicity= 2
   
   atoms= {

      keys= { label= { units= angstrom } pos= }

      data= {
         8     -0.028260    0.000029    0.000000
         1      0.599917    0.767685    0.000000
         1      0.599941   -0.767609    0.000000
      }

      do { use_interpolators= NO }

   }

   put


   scfdata= {

      initial_density= core

      kind=            uhf

      direct=          on

      convergence= 0.00001

      diis= { convergence_tolerance= 0.00001 }

   }
   
   scf

   becke_grid= {
     accuracy= high
   }

   put_1e_properties

   ! The spin contamination for the UHF wavefunction
   spin_contamination

   ! stuff on UHF spin, <S^2> evaluation and kramers pairs
   get_uhf_sx_sy_sz
   get_uhf_s2
   get_uhf_s2_orig
   get_uhf_kramers
   get_uhf_kramers_2

!   delete_scf_archives

}

