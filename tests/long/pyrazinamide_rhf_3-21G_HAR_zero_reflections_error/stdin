{ 

  ! This job does a Hirshfeld atom refinement based on
  ! a self consistent cluster charge SCF.


   name= pyrazinamide

   cif= { file_name= pyrazinamide.cif }
   process_cif
   name= pyrazinamide

 
   basis_name= 3-21G

   charge= 0
   multiplicity= 1
 

   crystal= {

      xray_data= {

         thermal_smearing_model= hirshfeld
         optimise_extinction= NO
         optimise_scale_factor= YEs

         REDIRECT shelx0.hkl

         put

      }

   }

   scfdata= {
      initial_density= promolecule
      kind=            rhf
      convergence= 0.001
      diis= { convergence_tolerance= 0.01 }
   }

   scf

   scfdata= {
      initial_MOs= restricted
      kind=        rhf

      use_SC_cluster_charges= TRUE
      cluster_radius= 8 angstrom
      convergence= 0.001
      diis= { convergence_tolerance= 0.01 }
   }

   scf

   fit_hirshfeld_atoms

}


   ! Calculate F's
   read_archive molecular_orbitals restricted
   make_scf_density_matrix
   make_H_structure_factors

   ! Prune zero F_calc's
   crystal= { xray_data= { f_calc_cutoff= 0.0001 } }
